+void wsm_lock_tx(struct bes2600_common *hw_priv)
+{
+	wsm_cmd_lock(hw_priv);
+	if (atomic_add_return(1, &hw_priv->tx_lock) == 1) {
+		if (wsm_flush_tx(hw_priv))
+			bes2600_dbg(BES2600_DBG_WSM, "[WSM] TX is locked.\n");
+	}
+	wsm_cmd_unlock(hw_priv);
