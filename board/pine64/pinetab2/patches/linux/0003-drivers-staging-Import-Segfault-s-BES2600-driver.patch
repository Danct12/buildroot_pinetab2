+static void __exit bes2600_sdio_exit(void)
+{
+	bes2600_info(BES2600_DBG_SDIO, "%s called\n", __func__);
+
+	bes2600_chrdev_free();
+	sdio_unregister_driver(&sdio_driver);
+}
