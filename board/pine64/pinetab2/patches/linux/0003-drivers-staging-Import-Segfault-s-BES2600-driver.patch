+u32 bes2600_rate_mask_to_wsm(struct bes2600_common *hw_priv, u32 rates)
+{
+	u32 ret = 0;
+	int i;
+	struct ieee80211_rate * bitrates =
+		hw_priv->hw->wiphy->bands[hw_priv->channel->band]->bitrates;
+	for (i = 0; i < 32; ++i) {
+		if (rates & BIT(i))
+			ret |= BIT(bitrates[i].hw_value);
+	}
+	return ret;
+}
