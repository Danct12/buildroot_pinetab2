+        hw_priv->tx_loop.enabled = false;
+        hw_priv->tx_loop.start_lmac_seq = 0;
+        hw_priv->tx_loop.start_mcu_seq = 0;
+        spin_lock_init(&hw_priv->tx_loop.tx_loop_lock);
+        skb_queue_head_init(&hw_priv->tx_loop.rx_queue);
